<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itemHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textSize="25dp"
            android:textStyle="bold" android:layout_marginRight="100dp"/>

        <TextView
            android:id="@+id/timeHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="Time"
            android:textSize="25dp"
            android:textStyle="bold" android:layout_marginRight="35dp"/>

        <ImageButton
            android:id="@+id/postButton"
            android:layout_width="28dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:background="@drawable/post_icon"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="28dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:background="@drawable/add_filter_icon"
            android:scaleType="fitXY" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/showAllBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Show All" />

        <TextView
            android:id="@+id/filterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="filter name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itemHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="70dp"
            android:text="Item"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="28dp"
            android:text="Time"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/postButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/post_icon_selector"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/addButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/add_filter_icon_selector"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/filterButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/filter_icon_selector"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" android:layout_gravity="center">

        <ImageButton
            android:id="@+id/forwardFilterBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:src="@drawable/arrow_back" />

        <ImageButton
            android:id="@+id/refreshBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#000000"
            android:src="@drawable/ic_popup_sync_1" />

        <ImageButton
            android:id="@+id/backFilterBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:src="@drawable/arrow" />
    </LinearLayout>

</LinearLayout>